{
  "name": "nodebb-plugin-post-notifier",
  "version": "0.0.2",
  "description": "A starter kit for quickly creating NodeBB plugins",
  "main": "library.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-yuri/nodebb-plugin-post-notifier"
  },
  "keywords": [
    "nodebb",
    "plugin",
    "quickstart",
    "shell"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": {
    "name": "d-yuri",
    "email": "dobrovolskiyuri@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d-yuri/nodebb-plugin-post-notifier/issues"
  },
  "readmeFilename": "README.md",
  "nbbpm": {
    "compatibility": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^7.1.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^2.4.0"
  },
  "dependencies": {
    "eslint": "^6.8.0",
    "lint-staged": "^10.0.9"
  }
}
